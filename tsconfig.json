{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@routes/*": ["routes/*"],
      "@screens/*": ["screens/*"],
      "@storage/*": ["storage/*"],
      "@theme/*": ["theme/*"],
      "@utils/*": ["utils/*"],
      "@types/*": ["@types/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
